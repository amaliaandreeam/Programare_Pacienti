@page "/{id:int?}"
@model Programare_Pacienti.Pages.Patients.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].ConsultationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Consultation.ConsultationReview)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].PatientCategories)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PatientD.Patient)
        {
            string selectedRow = "";
            if (item.ID == Model.PatientID)
            {
                selectedRow = "table-success";
            }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsultationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Consultation.ConsultationReview)
            </td>
            <td>
                @{
                    foreach (var category in item.PatientCategories)
                    {
                        @category.Category.ID @: @category.Category.CategoryAge <br />
                    }
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
            }
        </tbody>
</table>
